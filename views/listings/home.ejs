<% layout('layouts/boilerplate') -%>
<body>
    <div class="filters">
        <div><i class="fa-solid fa-fire"></i>&nbsp;Trending</div>
        <div><i class="fa-solid fa-bed"></i>&nbsp;Rooms</div>
        <div><i class="fa-solid fa-city"></i>&nbsp;Iconic Cities</div>
        <div><i class="fa-solid fa-mountain-sun"></i>&nbsp;Mountains</div>
        <div><i class="fa-brands fa-fort-awesome"></i>&nbsp;Castles</div>
        <div><i class="fa-solid fa-person-swimming"></i>&nbsp;Swimming Pools</div>
        <div><i class="fa-solid fa-campground"></i>&nbsp;Camping</div>
        <div><i class="fa-solid fa-cow"></i>&nbsp;Farms</div>
        <div><i class="fa-solid fa-snowflake"></i>&nbsp;Arctic</div>
        <div><i class="fa-solid fa-water"></i>&nbsp;Beaches</div>
    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
        <label class="form-check-label" for="flexSwitchCheckChecked">After Taxes</label>
    </div>
    <div class="allListings">
        <%for(listing of allListings){%>
            <div class="listing">
              <a href="/listings/<%=listing.id%>">
                  <li><%=listing.title%></li>
                <!-- <li><%=listing.description%></li> -->
                <li><img src="<%=listing.image.url%>" alt="Image"></li>
                 <li>Price: $<%=listing.price%></li>
                <span class="tax">+18% GST</span>
                <!-- <li><%=listing.location%></li>
                 <li><%=listing.country%></li> -->
              </a>
            </div>
        <%}%>
    </div>
     <script>
        //include taxes functionality 
        let taxSwitch=document.getElementById("flexSwitchCheckChecked");
        taxSwitch.addEventListener("click",()=>{
            let taxes=document.getElementsByClassName("tax");
            for(tax of taxes){
                if(tax.style.display!='inline'){
                    tax.style.display="inline"
                }else{
                    tax.style.display="none";
                }
            }
        })
     </script>
</body>
